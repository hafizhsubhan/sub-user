<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".Login">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/constraintLayout" >

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="130dp"
            android:text="Hi, Welcome to Sub-User!"
            android:textSize="30sp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/Greeting"
    />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/Greeting"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:id="@+id/plainText"
                android:text="Time still running, Lets getting in :"
        />

        <EditText
                app:layout_constraintTop_toBottomOf="@+id/plainText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:inputType="text"
                android:hint="Username"
                android:id="@+id/username"
        />

        <EditText
                app:layout_constraintTop_toBottomOf="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:inputType="text"
                android:hint="Password"
                android:id="@+id/pass"
        />

        <Button
                app:layout_constraintTop_toBottomOf="@+id/pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log In"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.93"
                android:id="@+id/butin"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/butin"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:id="@+id/pss"
                android:textStyle="italic"
                android:text="(psst!)"
                app:layout_constraintStart_toStartOf="parent"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/pss"
                app:layout_constraintTop_toBottomOf="@id/butin"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:id="@+id/text"
                android:text=" r u an"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/butin"
                app:layout_constraintLeft_toRightOf="@id/text"

                android:layout_marginTop="10dp"
                android:id="@+id/admin"
                android:text=" Admin?"
                android:clickable="true"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>